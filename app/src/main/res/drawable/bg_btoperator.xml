<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#0D5D10" />
            <corners android:radius="8dp" />
            <padding android:bottom="16dp" android:right="16dp" android:top="16dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#0599FF" />
            <corners android:radius="8dp" />
            <padding android:bottom="16dp" android:right="16dp" android:top="16dp" />
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <solid android:color="#0599FF" />
            <corners android:radius="8dp" />
            <padding android:bottom="16dp" android:right="16dp" android:top="16dp" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_hovered="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50" />
            <stroke android:width="2dp" android:color="#0D5D10" />
            <corners android:radius="8dp" />
            <padding android:bottom="16dp" android:right="16dp" android:top="16dp" />
        </shape>
    </item>

</selector>